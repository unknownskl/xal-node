{
  "name": "xal-node",
  "version": "0.1.1",
  "description": "NodeJS bridge for xal-rs",
  "main": "dist/lib.js",
  "scripts": {
    "build": "rm -rf dist/ && tsc && chmod +x dist/bin/auth.js && cargo-cp-artifact -nc dist/xal-node.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "( bash -c 'uname -a | grep -q -i Darwin' && npm run build-release-osx ) || npm run build -- --release",
    "build-release-osx": "npm run build -- --target=aarch64-apple-darwin --release && npm run build -- --target=x86_64-apple-darwin --release && npm run build-link",
    "build-link": "lipo target/x86_64-apple-darwin/release/libxal_node.dylib target/aarch64-apple-darwin/release/libxal_node.dylib -output dist/xal-node.node -create",
    "install": "npm run build-release",
    "test": "cargo test",
    "nodetest": "node tests/index.js",

    "auth": "tsc && node dist/bin/auth.js"
  },
  "bin": {
    "xbox-auth": "./dist/bin/auth.js"
  },
  "author": "UnknownSKL <info@jimkroon.nl>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.0",
    "cargo-cp-artifact": "^0.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unknownskl/xal-node.git"
  },
  "keywords": [
    "xbox",
    "xal"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "bugs": {
    "url": "https://github.com/unknownskl/xal-node/issues"
  },
  "homepage": "https://github.com/unknownskl/xal-node#readme",
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11"
  },
  "binary": {
    "module_name": "xal-node",
    "module_path": "./dist",
    "host": "https://github.com/unknownskl/xal-node/releases/download/",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}-{libc}.tar.gz",
    "remote_path": "{version}"
}
}
